        <activity
            android:name=".view.HomePage.HomePageActivity"
            android:theme="@style/Theme.ManageTournamentApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.User.RegisterPlayer.RegisterPlayerActivity"
            android:theme="@style/Theme.ManageTournamentApp.NoActionBar" />
        <activity android:name=".view.User.Login.LoginActivity" />
